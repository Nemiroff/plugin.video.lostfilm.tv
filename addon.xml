<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.lostfilm.tv" name="LostFilm.TV" version="1.0.3" provider-name="Nemiroff, anteo">
    <requires>
        <import addon="xbmc.python" version="2.19.0"/>
        <import addon="script.module.requests" version="2.7.0"/>
        <import addon="script.module.torrent2http" version="0.0.9"/>
        <import addon="script.service.torrserver" optional="true"/>
        <import addon="metadata.tvdb.com" version="2.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="login"/>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <language>ru en</language>
        <website>http://lostfilm.tv/</website>
        <source>https://github.com/Nemiroff/plugin.video.lostfilm.tv</source>
        <summary lang="en">Explore LostFilm.TV</summary>
        <summary lang="ru">Ваш проводник по порталу LostFilm.TV</summary>
        <description lang="ru">Просматривайте новые серии любимых сериалов с портала LostFilm.TV!</description>
        <description lang="en">Watch new episodes of your favorite TV shows on LostFilm.TV!</description>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        <news>[B]Версия 1.0.3[/B]
              [CR]+ Добавлена поддержка Elementum
            [CR][CR]
              [B]Версия 1.0.2[/B]
              [CR]* Авторизация по E-Mail на www.lostfilm.tv вместо old.lostfilm.tv
        </news>
    </extension>
</addon>
